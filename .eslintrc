{
  "rules": {
    "strict": 0
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "root": true,
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "comma-dangle": ["warn", "never"],
    "indent": ["warn", 4],
    "linebreak-style": ["warn", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    
    "no-unused-expressions": "warn",
    "no-useless-concat": "warn",
    "block-scoped-var": "error",
    "consistent-return": "error"
  }
}
